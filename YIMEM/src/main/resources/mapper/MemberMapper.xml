        insert into member (id, create_time, head_img_url,
                            name, phone, account,
                            password, state)
        values (#{id,jdbcType=INTEGER}, now(), #{headImgUrl,jdbcType=VARCHAR},
                #{name,jdbcType=VARCHAR}, #{phone,jdbcType=VARCHAR}, #{account,jdbcType=VARCHAR},
