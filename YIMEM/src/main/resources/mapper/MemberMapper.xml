<mapper namespace="com.czx.yimem.dao.MemberMapper">
    <resultMap id="BaseResultMap" type="com.czx.yimem.entity.Member">
        <constructor>
            <idArg column="id" javaType="java.lang.Integer" jdbcType="INTEGER"/>
            <arg column="create_time" javaType="java.util.Date" jdbcType="TIMESTAMP"/>
            <arg column="head_img_url" javaType="java.lang.String" jdbcType="VARCHAR"/>
            <arg column="name" javaType="java.lang.String" jdbcType="VARCHAR"/>
