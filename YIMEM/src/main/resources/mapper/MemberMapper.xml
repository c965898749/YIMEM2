        name,
        phone,
        account,
        password,
        state
    </sql>
    <select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from member
        where id = #{id,jdbcType=INTEGER} and state = "1"
    </select>


    <select id="selectphoneBydevId" parameterType="java.lang.Integer" resultType="java.lang.String">
        SELECT m.phone from member m
        LEFT JOIN company c on c.cus_id=m.id
        LEFT JOIN job j on j.company_id=c.company_id
        LEFT JOIN deliver d on d.job_id=j.job_id
        where d.dev_id=#{id,jdbcType=INTEGER}
    </select>

    <select id="getName" parameterType="java.lang.String" resultType="java.lang.String">
        select
            name
        from member
        where account = #{account}
    </select>
    <select id="search" parameterType="java.lang.String" resultMap="BaseResultMap">

        SELECT
        *
        FROM
        member r
        LEFT JOIN rc_group_men m ON r.id = m.m_user_id
        WHERE
         r.flag =1
        <if test="ids != null">
            and m.dep_id IN
            <foreach collection="ids" item="code" index="index" open="(" close=")" separator=",">
                #{code}
            </foreach>
        </if>
        <if test="key != null and key!= ''">
            and r.name like concat('%',#{key},'%')
        </if>
        ORDER BY
        r.create_time DESC
    </select>

    <select id="findByMember" parameterType="java.lang.String" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from member
        where account = #{account} and state = "1"
    </select>

    <select id="findaccount" parameterType="java.lang.String" resultType="java.lang.Integer">
        select count(*)
        from member
        where account = #{account}
          and state = "1"
    </select>

    <select id="findisPassword" parameterType="java.lang.Integer" resultType="java.lang.Integer">
        select count(*)
        from member
        where id = #{id} and  ISNULL(`password`)
    </select>

    <select id="findphone" parameterType="java.lang.String" resultType="java.lang.Integer">
        select count(*)
        from member
        where phone = #{phone}
          and state = "1"
    </select>

    <select id="findaccountByphone" parameterType="java.lang.String" resultType="java.lang.String">
        select account
        from member
        where phone = #{phone}
          and state = "1"
    </select>


    <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
        delete
